<div id="map-settings">
    <h3>Impostazioni della Mappa</h3>
    <form id="map-config-form">
        <!-- Dimensioni della Mappa -->
        <label for="map-width">Larghezza (px):</label>
        <input type="number" id="map-width" placeholder="Es. 1024" />

        <label for="map-height">Altezza (px):</label>
        <input type="number" id="map-height" placeholder="Es. 768" />

        <!-- Scala della Griglia -->
        <label for="grid-cell-size">Dimensione Cella Griglia (px):</label>
        <input type="number" id="grid-cell-size" placeholder="Es. 50" />

        <button type="button" id="apply-config-btn">Applica Configurazione</button>
    </form>
</div>

<div id="map-container">
    <canvas id="map-canvas"></canvas>
</div>
<script src="/js/gameMap.js" defer></script>
<link rel="stylesheet" href="/css/gameMap.css">

